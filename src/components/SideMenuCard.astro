---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists } = playlist;

const artisitsString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artisitsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>
  <div class="truncate flex flex-col flex-auto">
    <h4 class="font-medium text-sm">
      {title}
    </h4>
    <span class="font-extralight text-sm text-gray-400">
      {artisitsString}
    </span>
  </div>
</a>
